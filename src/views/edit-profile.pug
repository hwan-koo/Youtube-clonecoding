extends base

block content 

    form(method="POST", enctype="multipart/form-data").edit-profile__form
        label(for="avatar") 프로필 수정
        input(type="file", id = "avatar", name="avatar", accept="image/*")
        input(name="name", type ="text", required= true , placeholder="name", value=loggedInUser.name)
        input(name="email", type ="email", required= true, placeholder="email",value=loggedInUser.email)
        input(name="username", type ="text", required= true, placeholder="username",value=loggedInUser.username)
        input(name="location", type ="text", required= true, placeholder="location",value=loggedInUser.location)
        input(type="submit", value="Update Profile")
        if !loggedInUser.socialOnly
            hr
            div.edit-profile__password
                a(href="change-password") Change Password &rarr;