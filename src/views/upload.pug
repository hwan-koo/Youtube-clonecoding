extends base.pug

block content 
    if errorMessage 
        span=errorMessage
    form(method="POST", enctype= "multipart/form-data" )
        label(for="video") Video File 
        input(type="file", accept="video/*", required, id="video", name="video")
        input(placeholder="제목", required, type="text", name="title", maxlength=80)
        input(placeholder="설명", required, type="text", name="description", minlength=20)
        input(placeholder="해쉬태그(,쉼표로 분리해주세요)", required, type="text", name="hashtags")    
        input(type="submit", value="영상 업로드")