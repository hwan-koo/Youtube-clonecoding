extends base.pug


block content  
    h4 Update Video
    form(method="POST")
        input(name="title",placeholder="Video Title",value=video.title,required)
        input(placeholder="설명", required, type="text", name="description", minlength=20, value=video.description)
        input(placeholder="해쉬태그(,쉼표로 분리해주세요)", required, type="text", name="hashtags", value=video.hashtags.join())    
        input(value="Save", type="submit")